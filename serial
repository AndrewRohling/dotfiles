#!/bin/sh

clear

read -p "
[1] adafruit
[2] soekris 19200
[3] soekris 57600
[4] rasp pi

? : " action

case $action in
  1)
    minicom -c on configuration adafruit
  ;;
  2)
    minicom -c on -b 19200 configuration soekris
  ;;
  3)
    minicom -c on -b 57600 configuration soekris
  ;;
  4)
    minicom -c on configuration rasp
  ;;
  *)
    echo "exiting ..."
  ;;
esac
