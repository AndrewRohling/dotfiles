#!/bin/sh

clear

whoiam=$(whoami)

if [ "$whoiam" != "root" ];
then
  echo "please run as root"
  exit 1
fi


read -p "
[1] adafruit
[2] soekris 19200
[3] soekris 57600
[4] rasp pi

? : " configuration

read -p "

Device

[1] USB0
[2] USB1
[3] ACM0
[4] AMA0

? : " device

case $configuration in
  1)
    cat /etc/minicom/minirc.adafruit
    echo
    echo "minicom -c on configuration adafruit $port"
    minicom -c on device $device configuration adafruit
  ;;
  2)
    minicom -c on -b 19200 configuration soekris
  ;;
  3)
    minicom -c on -b 57600 configuration soekris
  ;;
  4)
    minicom -c on configuration rasp
  ;;
   4)
    port=$(get_ttys)
    echo "minicom -o -c on -m -D $port configuration soekris57600"
    # minicom -o -c on -m -D $port configuration soekris57600
  ;;
  *)
    echo "exiting ..."
  ;;
esac
