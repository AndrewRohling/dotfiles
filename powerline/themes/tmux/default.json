{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"hostname": {
			"before": " ",
			"args": {
				"only_if_ssh": true
			}
		},
		"uptime": {
			"before": "⇑  "
		},
		"external_ip": {
			"before": "ⓦ  "
		},
		"date": {
			"before": "⌚ "
		},
		"branch": {
			"before": "> "
		}
	},
	"segments": {
	    "left":[
			{
				"name": "branch"
			},
			{
				"name": "cwd",
				"args": {
					"dir_limit_depth": "3"
				}
			}
	    ],
	    "status":[
	    ],
		"right": [
			{
				"name": "date",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"name": "hostname"
			}
		]
	}
}